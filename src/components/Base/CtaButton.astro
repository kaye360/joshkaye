---
import { getPages } from "../../js/getPages";
import Button from "./Button.astro";
import { RocketIcon } from '@lucide/astro'
const cta = getPages().byGroup('cta').single()
---

<Button as="a" href={cta.path} class="group">
    <RocketIcon class="group transition-all group-hover:translate-x-1 group-hover:-translate-y-1 w-5 sm:w-auto "/>
    <span class="text-sm sm:text-base">
        {cta.title}
    </span>
</Button>