---
import type { HTMLAttributes } from 'astro/types';
import { PAGES, Page } from '../../config';
import Button from '../Button.astro';



interface Props extends HTMLAttributes<'a'> {
    
    /** Material icon string for icon */
    icon? : string

    class? : string,

    /**
     * @extends <a>
     * @prop href : string
     * @prop icon : string
     */
    props? : true
}



const {
    icon,
    class : className = ''
} = Astro.props



const cta = PAGES.find(page => page.cta) as Page

---


<Button type='link' href={cta.path} class={className}>
    {cta.title}
</Button>



<style>

a {
    background-color: var(--nav-bar-CTA-bg-color);
    color : var(--nav-bar-CTA-text-color) !important;
}

a:hover, a:focus-visible {
    background-color: var(--nav-bar-CTA-bg-color-hover);
    color : var(--nav-bar-CTA-text-color-hover) !important;
}

</style>
