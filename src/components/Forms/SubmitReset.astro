---
import type { HTMLAttributes } from 'astro/types';
import Button from '../Base/Button.astro';

interface Props extends HTMLAttributes<'div'> {

    /**
     * @slot reset - Reset button text
     * @slot submit - Submit button text
     */
    props? : true
}

---

<div class="grid gap-4 w-full max-w-[600px] md:grid-cols-[1fr_2fr] p-2">

    <Button as="button" variant='outline' type="reset">
        <slot name="reset">
            Reset
        </slot>
    </Button> 

    <Button as="button" type="submit">
        <slot name="submit">
            Submit
        </slot>
    </Button> 

</div>
